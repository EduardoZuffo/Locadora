{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listagem de Cliente</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Nome</th>
                <th>Endereco</th>
                <th>Email</th>
                <th>Data de Nascimento</th>
                <th class="text-center">Ação</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>

                <td><a href="{{ path('cliente_show', { 'id': cliente.id }) }}">{{ cliente.nome }}</td>
                <td>{{ cliente.endereco }}</td>
                <td>{{ cliente.email }}</td>
                <td>{% if cliente.dataNascimento %}{{ cliente.dataNascimento|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <ul class="nav nav-pills">
                        <li>
                            <a href="{{ path('cliente_edit', { 'id': cliente.id }) }}">
                                <span class="glyphicon glyphicon-pencil"></span> Editar</a>
                        </li>
                        <li>
                            <a href="{{ path('cliente_delete', { 'id': cliente.id }) }}" class="btn btn-danger">
                                <span class="glyphicon glyphicon-trash"></span> Deletar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="nav nav-pills">
        <li>
            <a href="{{ path('cliente_new') }}" class="btn btn-primary" >Criar Novo Cliente</a>
        </li>
    </ul>
{% endblock %}
